{
	"name": "cpsit/myra-cloud-connector",
	"description": "clear cache for Myra Cloud",
	"license": "GPL-2.0-or-later",
	"type": "typo3-cms-extension",
	"require": {
		"php": "~8.2.0 || ~8.3.0 || ~8.4.0 || ~8.5.0",
		"ext-json": "*",
		"cpsit/myra-web-api": "^1.0",
		"guzzlehttp/guzzle": "^7.0",
		"psr/http-factory": "^1.0",
		"psr/http-message": "^1.0 || ^2.0",
		"psr/log": "^1.0 || ^2.0 || ^3.0",
		"symfony/console": "^7.0",
		"symfony/dependency-injection": "^7.0",
		"typo3/cms-backend": "^13.4",
		"typo3/cms-core": "^13.4"
	},
	"require-dev": {
		"armin/editorconfig-cli": "^2.1",
		"eliashaeussler/typo3-vendor-bundler": "^4.0",
		"eliashaeussler/version-bumper": "^3.0",
		"ergebnis/composer-normalize": "^2.47",
		"phpstan/extension-installer": "^1.4",
		"phpstan/phpstan": "^2.1",
		"saschaegerer/phpstan-typo3": "^2.1",
		"shipmonk/composer-dependency-analyser": "^1.8",
		"ssch/typo3-rector": "^3.6",
		"typo3/cms-filelist": "^13.4",
		"typo3/coding-standards": "^0.8.0"
	},
	"replace": {
		"cpsit/cps-myra-cloud": "self.version"
	},
	"autoload": {
		"psr-4": {
			"CPSIT\\MyraCloudConnector\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CPSIT\\MyraCloudConnector\\Tests\\": "Tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"eliashaeussler/typo3-vendor-bundler": true,
			"eliashaeussler/version-bumper": true,
			"ergebnis/composer-normalize": true,
			"phpstan/extension-installer": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		},
		"sort-packages": true
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "myra_cloud_connector"
		}
	},
	"scripts": {
		"analyze": [
			"@analyze:dependencies"
		],
		"analyze:dependencies": "composer-dependency-analyser",
		"docs": [
			"@docs:cleanup",
			"@docs:build",
			"@docs:open"
		],
		"docs:build": "docker compose run --user=$(id -u):$(id -g) --rm docs",
		"docs:cleanup": "rm -rf .Build/docs",
		"docs:open": "open .Build/docs/Index.html",
		"fix": [
			"@fix:composer",
			"@fix:editorconfig",
			"@fix:php"
		],
		"fix:composer": [
			"@composer normalize"
		],
		"fix:editorconfig": "@lint:editorconfig --fix",
		"fix:php": "php-cs-fixer fix",
		"lint": [
			"@lint:composer",
			"@lint:editorconfig",
			"@lint:php"
		],
		"lint:composer": "@fix:composer --dry-run",
		"lint:editorconfig": "ec --git-only",
		"lint:php": "@fix:php --dry-run",
		"migration": [
			"@migration:rector"
		],
		"migration:rector": "rector process",
		"sca": [
			"@sca:php"
		],
		"sca:php": "phpstan analyse -c phpstan.neon"
	}
}
